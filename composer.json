{
    "name": "wwg8/wwg8_build",
    "description": "The root composer project for the Warren Wildlife Gallery Drupal 8 website",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Jeff Cardwell",
            "email": "jeffcardwellbusiness@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/core": "^8.2"
    },
    "require-dev": {
        "drush/drush": "^8.1",
        "drupal/console": "^0.11.3",
        "drupal/devel": "1.x-dev"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "d8_starter_profile": {
            "type": "vcs",
            "url": "git@gitlab.com:wwg/wwg8_profile.git"
        }
    },
    "extra": {
        "installer-paths": {
            "modules/contrib/{$name}": ["type:drupal-module"],
            "profiles/contrib/{$name}": ["type:drupal-profile"],
            "themes/contrib/{$name}": ["type:drupal-theme"],

            "profiles/custom/{$name}": ["jeff_cardwell/d8_starter_profile"]
        }
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    }
}
